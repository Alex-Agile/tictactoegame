{
    "name": "Tic Tac Toe Game - Alejandro Barba",
    "description": "Tic Tac Toe Game using Slim Framework and Minimax Algorithm for Docler Holding assessent by Alejandro Barba",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/alex-agile/docler-tic-tac",
    "license": "MIT",
    "authors": [
        {
            "name": "Alejandro Barba Prieto",
            "email": "abarbaprieto@gmail.com",
            "homepage": "http://github.com/alex-agile/docler-tic-tac"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "monolog/monolog": "^1.17",
        "slim/extras": "^2.0",
        "slim/middleware": "*",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.1",
        "zircote/swagger-php": "^2.0",
        "swagger-api/swagger-ui": "^2.2",
        "components/jquery": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "Docler\\": "src/Docler/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit",
        "post-update-cmd": [
            "vendor/bin/swagger --output src/Docler/Api/V1/Resources/Doc/doc.json --exclude vendor"
        ],
        "post-install-cmd": [
            "ln -s ../../src/Docler/TicTac/Resources/Public/js/game.js public/js/game.js",
            "ln -s ../../vendor/components/jquery/jquery.min.js public/js/jquery.min.js",
            "ln -s ../src/Docler/TicTac/Resources/Public/css/ public/css",
            "ln -s ../../../vendor/swagger-api/swagger-ui/dist/ public/api/v1/doc",
            "vendor/bin/swagger --output src/Docler/Api/V1/Resources/Doc/doc.json --exclude vendor",
            "ln -s ../../../src/Docler/Api/V1/Resources/Doc/doc.json public/api/v1/doc.json",
            "vendor/bin/phpunit -c phpunit.xml --coverage-html public/coverage"
        ]
	}
}
